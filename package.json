{
  "name": "simple-restaurant-page",
  "version": "1.0.0",
  "description": "Simple single-page application dynamically rendered for a restaurant.",
  "private": true,
  "scripts": {
    "lint": "eslint --fix src",
    "prettier": "prettier --write \"./**/*.{js,jsx,json}\"",
    "build": "webpack --mode=production",
    "start": "webpack-dev-server --open"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MauricioRobayo/simple-restaurant-page.git"
  },
  "author": "Mauricio Robayo <rfmajo@gmail.com> (www.mauriciorobayo.com)",
  "keywords": [],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MauricioRobayo/simple-restaurant-page/issues"
  },
  "homepage": "https://mauriciorobayo.github.io/simple-restaurant-page",
  "devDependencies": {
    "css-loader": "^3.2.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "node-sass": "^4.13.0",
    "prettier": "^1.18.2",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.0.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.9.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "babel-loader": "^8.0.6",
    "html-webpack-plugin": "^3.2.0"
  }
}
